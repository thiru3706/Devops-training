node {
    def app

    stage('Clone repository') {
       

        checkout scm
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("thiru3706/devopstraining")
    }

    stage('Test image') {
        
        app.inside {
            echo "Tests passed"
        }
    }

    stage('deploy image') {
        
        docker.withRegistry('https://ec2-15-206-146-143.ap-south-1.compute.amazonaws.com', 'de66acff-3ba3-40a0-a84e-459da7c18113') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
            } 
                echo "Trying to Push Docker Build to AWS EC2"
    }
}

