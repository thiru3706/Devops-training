node {
    def app

    stage('Clone repository') {
       

        checkout scm
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("thiru3706/devopstraining")
    }

    stage('Test image') {
        
        app.inside {
            echo "Tests passed"
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://003279909143.dkr.ecr.ap-south-1.amazonaws.com/thiru3706/devopstraining', 'ecr:ap-south-1:MARK') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
            } 
                echo "Trying to Push Docker Build to AWS ECR"
    }
}

