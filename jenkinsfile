node {
    def app

    stage('Clone repository') {
       

        checkout scm
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("thiru3706/devopstraining1")
    }

    stage('Test image') {
        
        app.inside {
            echo "Tests passed"
        }
    }

    stage('push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'DOCKER1') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
            } 

    stage('deploy AWS') {
		step {
	sh '''
		ssh -i "ec2-demo-mumbai.pem" ubuntu@ec2-15-206-146-143.ap-south-1.compute.amazonaws.com
                sudo docker run -it -p9000:9000 thiru3706/devopstraining1
	'''
	}
    }
}

